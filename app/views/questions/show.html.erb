<div class="question">
  <p class="title">
    <strong>Question:</strong>
    <%= @question.title %><br>

  </p>

  <p class="description"><%= @question.description %></p>

  <%= link_to 'Edit', edit_question_path(@question) %> |
  <%= link_to 'Destroy', @question, method: :delete, data: { confirm: 'Are you sure you want to delete this question?' } %>
</div>


  <div class="answers">
    <h3><strong>Answers:</strong></h3>
    <% @answers.each do |answer| %>
      <p><%= answer.description %></p>
    <% end %>
  </div>



<div class="links">
  <%= link_to 'Post an Answer', new_question_answer_path(@question, @answer) %> |
  <%= link_to 'Back', questions_path %>
</div>
